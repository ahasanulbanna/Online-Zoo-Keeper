@model IEnumerable<ZooApp.ViewModels.ViewFood>



<div class="row">
<div class="col-md-offset-1">
    <h2 style="text-align:center;color:green; background-color:silver;">Food List</h2>

    <p>
        @Html.ActionLink("Add Food", "Create", null, new { @class = "btn btn-warning glyphicon glyphicon-plus-sign" })
    </p>
    <table class="table table-bordered" style="text-align:center;">
        <tr style="background-color:#9fda98;font-size:25px;">
            <td>
                Name
            </td>
            <td>
                Price(Taka)
            </td>
            <td>Action</td>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-default glyphicon glyphicon-edit" })
                    @Html.ActionLink("Delete", "Delete", new { Id = item.Id, GroceryId = item.Id }, new { @onclick = "return confirm('Are you sure you want to delete this Food');", @class = "btn btn-info btn-lg glyphicon glyphicon-trash" })
                </td>
            </tr>
        }

    </table>

</div>
</div>
