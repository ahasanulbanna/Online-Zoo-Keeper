<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>






    <div class="navbar navbar-inverse navbar-fixed-top" style="background-color:forestgreen; height:70px;" >
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("ZooKeeper", "Login", "Users", new {}, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav" style="font-size:28px;margin:12px 22px;">
                    <li>@Html.ActionLink("Animal", "Index", "Animals")</li>
                    <li>@Html.ActionLink("Food", "Index", "Foods")</li>
                    <li>@Html.ActionLink("Bazar List", "Index", "AnimalFoods")</li>
                    <li>
                    <input type="text" class="form-control" placeholder="Search" style="margin:10px 12px;">   
                    </li>
                    <li>
                        <button class="form-control" type="submit" style="margin:10px 12px;"><i class="glyphicon glyphicon-search"></i>  </button>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content" style="margin:10px 20px;">
        @RenderBody()
        <hr />
        <footer>

            <p>&copy; @DateTime.Now.Year -Development by Ahasanul Banna <a href="~/Home/Contact">Contact</a></p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
